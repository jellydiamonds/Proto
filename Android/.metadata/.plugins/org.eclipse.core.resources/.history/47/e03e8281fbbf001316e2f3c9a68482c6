package com.jellydiamonds.android.comm;

import java.util.Collection;

import org.json.JSONArray;
import org.json.JSONObject;

import com.jellydiamonds.android.metier.GemID;


public class JellySerialize {

	JSONArray SerializeJellyCollection( Collection<GemID> collection )
	{
		JSONArray l_serializedCollection = new JSONArray();
		JSONObject l_serialized_gemid = null;
		
		for( GemID l_tmp_gemid : collection )
		{
			l_serialized_gemid = new JSONObject();
			
			l_serialized_gemid.put("reference", l_tmp_gemid); 	// 1
			l_serialized_gemid.put("color", l_tmp_gemid);			// 2
			l_serialized_gemid.put("mass", l_tmp_gemid);			// 3
			l_serialized_gemid.put("sizeX", l_tmp_gemid);			// 4
			l_serialized_gemid.put("sizeY", l_tmp_gemid);			// 5
			l_serialized_gemid.put("sizeZ", l_tmp_gemid);			// 6
			l_serialized_gemid.put("comments", l_tmp_gemid);		// 7
			l_serialized_gemid.put("priceCurrency", l_tmp_gemid);	// 8
			l_serialized_gemid.put("priceValue", l_tmp_gemid);	// 9
			l_serialized_gemid.put("supplierID", l_tmp_gemid);	// 10
			l_serialized_gemid.put("creationDate", l_tmp_gemid);	// 11
			l_serialized_gemid.put("photoLink", l_tmp_gemid);		// 12
			l_serialized_gemid.put("species", l_tmp_gemid);		// 13
			l_serialized_gemid.put("shape", l_tmp_gemid);			// 14
			l_serialized_gemid.put("cut", l_tmp_gemid);			// 15
			l_serialized_gemid.put("clarity", l_tmp_gemid);		// 16
			l_serialized_gemid.put("light", l_tmp_gemid);			// 17
			l_serialized_gemid.put("enhancement", l_tmp_gemid);	// 18
			l_serialized_gemid.put("certificate", l_tmp_gemid);	// 19
			l_serialized_gemid.put("origin", l_tmp_gemid);		// 20
			l_serialized_gemid.put("currentStatus", l_tmp_gemid);
		}
		
		
		return l_serializedCollection;
	}
}
