package com.jellydiamonds.android.comm;

import java.util.Collection;

import org.json.JSONArray;
import org.json.JSONObject;

import com.jellydiamonds.android.metier.GemID;


public class JellySerialize {

	JSONArray SerializeJellyCollection( Collection<GemID> collection )
	{
		JSONArray l_serializedCollection = new JSONArray();
		JSONObject l_serialized_gemid = null;
		
		for( GemID l_tmp_gemid : collection )
		{
			l_serialized_gemid = new JSONObject();
			
			l_serialized_gemid.put("reference", value); 	// 1
			l_serialized_gemid.put("color", value);			// 2
			l_serialized_gemid.put("mass", value);			// 3
			l_serialized_gemid.put("sizeX", value);			// 4
			l_serialized_gemid.put("sizeY", value);			// 5
			l_serialized_gemid.put("sizeZ", value);			// 6
			l_serialized_gemid.put("comments", value);		// 7
			l_serialized_gemid.put("priceCurrency", value);	// 8
			l_serialized_gemid.put("priceValue", value);	// 9
			l_serialized_gemid.put("supplierID", value);	// 10
			l_serialized_gemid.put("creationDate", value);	// 11
			l_serialized_gemid.put("photoLink", value);		// 12
			l_serialized_gemid.put("species", value);		// 13
			l_serialized_gemid.put("shape", value);			// 14
			l_serialized_gemid.put("cut", value);			// 15
			l_serialized_gemid.put("clarity", value);		// 16
			l_serialized_gemid.put("light", value);			// 17
			l_serialized_gemid.put("enhancement", value);	// 18
			l_serialized_gemid.put("certificate", value);	// 19
			l_serialized_gemid.put("origin", value);		// 20
			l_serialized_gemid.put("currentStatus", value);
		}
		
		
		return l_serializedCollection;
	}
}
