<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Models="clr-namespace:JellyDiamondsCRicheC.Models" x:Class="JellyDiamondsCRicheCS.NewGemID"
        Title="NewGemID" Height="454" Width="445">
    <Grid Margin="0,0,2,4">
        <Grid.DataContext>
            <Models:GemID/>
        </Grid.DataContext>
        <Image x:Name="imagepierre" HorizontalAlignment="Left" Height="174" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" RenderTransformOrigin="0.128,0.139"/>
        <ComboBox Margin="0,324,348,0" VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="81"/>
        <ComboBox x:Name="Certificate" IsEditable="True" IsReadOnly="True" Text="Certificates" Margin="0,270,331,0" ItemsSource="{Binding ListCertificate}" VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="97"/>
        <ComboBox Margin="0,0,344,47" VerticalAlignment="Bottom" Height="22" HorizontalAlignment="Right" Width="81"/>
        <ComboBox x:Name="shapes"  IsEditable="True" IsReadOnly="True" Text="Shapes" Margin="0,216,331,0" VerticalAlignment="Top" ItemsSource="{Binding Listshapes}" Height="22" HorizontalAlignment="Right" Width="98"/>
        <ComboBox x:Name="Cutting" IsEditable="True" IsReadOnly="True" Text="Cutting" Margin="0,297,331,0" ItemsSource="{Binding ListCutting}" VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="96"/>
        <ComboBox x:Name="Lights" IsEditable="True" IsReadOnly="True" Text="Lights" Margin="0,243,331,0" VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="97" ItemsSource="{Binding ListCutting}"/>
        <Button Content="Photo" HorizontalAlignment="Left" Margin="12,189,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="File" HorizontalAlignment="Left" Margin="104,189,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button x:Name="Btn_Main_Color" Content="Set Main Color" HorizontalAlignment="Left" Margin="301,32,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click_2" Height="31"/>
        <Ellipse x:Name="Display_main_color" Fill="#FFFFFFFF" HorizontalAlignment="Left" Height="31" Margin="209,32,0,0" Stroke="Black" VerticalAlignment="Top" Width="87"/>
        <Ellipse x:Name="Display_2nd_color_1" Fill="#FFFFFFFF" HorizontalAlignment="Left" Height="31" Margin="209,85,0,0" Stroke="Black" VerticalAlignment="Top" Width="87"/>
        <Ellipse x:Name="Display_2nd_color_2" Fill="#FFFFFFFF" HorizontalAlignment="Left" Height="31" Margin="209,121,0,0" Stroke="Black" VerticalAlignment="Top" Width="87"/>
        <Button x:Name="Btn_2nd_color_1" Content="Set Color" HorizontalAlignment="Left" Margin="301,85,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click_3" Height="31"/>
        <Button x:Name="Btn_2nd_color_2" Content="Set Color" HorizontalAlignment="Left" Margin="296,121,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click_4" Height="31"/>
        <Label x:Name="lbl_main_color" Content="Main color" HorizontalAlignment="Left" Margin="209,10,0,0" VerticalAlignment="Top" Width="87"/>
        <Label x:Name="lbl_main_color_Copy" Content="Other Colors" HorizontalAlignment="Left" Margin="209,63,0,0" VerticalAlignment="Top" Width="87"/>
    </Grid>
</Window>
